{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@gdz/typescript/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "ESNext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist"
  },
  "include": [
    "src",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
